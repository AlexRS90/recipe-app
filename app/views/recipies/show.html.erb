<h2><%= @recipe.name %></h2>
<div class="d-flex justify-content-between">
  <div>
    <p>Preparation time: <%= @recipe.preparation_time %></p>
    <p>Cooking time: <%= @recipe.cooking_time %></p>
  </div>
  <div>
    <p> <%= @recipe.public == true ? 'Sharing Recipe' : 'Just for you!' %> </p>
  </div>
</div>
<div>
  <p><%= @recipe.description %></p>
</div>

<div class="d-flex justify-content-between">
  <p>Generate Shopping List</p>
  <%# if @owner == true %>
    <%= link_to 'Add Food', '/foods' %>
  <%# end %>
  <%= link_to 'Add Ingredient', "/recipies/#{@recipe.id}/ingredients/new" %>
</div>
<div class="bg-secondary h-2"><p class="text-secondary">pumas</p></div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Quantity</th>
      <th scope="col">Value</th>
      <th scope="col">Remove</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td scope="row">1</td>
      <td>Mark</td>
      <td>Otto</td>
      <td>@mdo</td>
    </tr>
    <tr>
      <td scope="row">2</td>
      <td>Jacob</td>
      <td>Thornton</td>
      <td>@fat</td>
    </tr>
    <tr>
      <td scope="row">3</td>
      <td colspan="2">Larry the Bird</td>
      <td>@twitter</td>
    </tr>
  </tbody>
</table>
